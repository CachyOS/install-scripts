Preliminary_information_about_the_installation() {
  local handle="$1"
  local tabnum="$2"
  yad --plug="$handle" --tabnum="$tabnum" --form \
      --title="$FUNCNAME" \
      --columns=1 \
      --field='Read information offline!'"/usr/share/icons/Adwaita/48x48/legacy/accessories-text-editor.png"'!'"mousepad /home/liveuser/preinfo.txt":fbtn    'mousepad /home/liveuser/preinfo.txt' \
      --field='Info on our Website!'"/usr/share/endeavouros/EndeavourOS-icon.png"'!'"firefox endeavouros.com/posts":fbtn    'firefox endeavouros.com/posts' \
      &> /dev/null &
}
EndeavourOS_Partition_and_Install() {
  local handle="$1"
  local tabnum="$2"
  yad --plug="$handle" --tabnum="$tabnum" --form \
      --title="$FUNCNAME" \
      --columns=1 \
      --field='Create Partitions!'"/usr/share/icons/hicolor/48x48/apps/gparted.png"'!'"sudo gparted":fbtn    'sudo gparted' \
      --field='Install EndeavourOS to disk!'"/usr/share/endeavouros/EndeavourOS-icon-E.png"'!'"sudo /usr/bin/calamares_switcher":fbtn    '/usr/bin/calamares_switcher' \
      &> /dev/null &
}

PrepareTabs() {
  local handle="$1"
  local xx ix
  ix=1
  for xx in Preliminary_information_about_the_installation EndeavourOS_Partition_and_Install ; do
    $xx "$handle" "$((ix++))"
  done
}

StartHere() {
  local handle="987$$"
  PrepareTabs "$handle" || return $?
  yad --notebook --key=$handle --posx=40 --posy=40 --on-top \
      --title="install" \
      --tab="Preliminary information about the installation" \
      --tab="EndeavourOS Partition and Install" \
      --button=gtk-quit:0
}

StartHere
